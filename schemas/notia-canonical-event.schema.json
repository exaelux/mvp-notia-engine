{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://notia-engine.local/schemas/notia-canonical-event.schema.json",
  "title": "NOTIA Canonical Event",
  "type": "object",
  "properties": {
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "domain": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "meaning": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "required": ["event_id", "domain", "type", "timestamp"],
  "additionalProperties": true
}
